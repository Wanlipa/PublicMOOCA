<%- include('includes/head.ejs') %>

    </head>

    <body>
        <%- include('includes/navigation.ejs') %>

            <div class="container">
                <br>
                <div class="card">
                    <h3 class="card-header bg-light">Customize Course</h3>
                    <div class="card-body">
                        <form>
                            <div class="form-group row">
                                    <label for="courseName" class="col-sm-2 col-form-label">Course Name</label>                                    
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" id="courseName" aria-describedby="courseName" placeholder="HTML & CSS">
                                    </div>
                                    <label for="courseName" class="col-sm-2 col-form-label">Course Number</label>                                     
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" id="courseNumber" aria-describedby="courseNumber" placeholder="CU005">
                                    </div>                                
                            </div>
                            
                            <h5>Length</h5>
                            <hr>
                            <div class="form-group row">
                                    <label for="totalHour" class="col-sm-2 col-form-label">Total Hour</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="totalHour" aria-describedby="totalHour" placeholder="10">
                                    </div>
                                    <label for="effort" class="col-sm-2 col-form-label">Effort</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="effort" aria-describedby="effort" placeholder="2">
                                    </div>                                
                            </div>
                            <h5>Bloom's Taxonomy related with effort (%)</h5>
                            <hr>
                            <div class="form-group row">
                                    <label for="remember" class="col-sm-2 col-form-label">Remember</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="remember" aria-describedby="remember" placeholder="20">
                                    </div>
                                    <label for="analyze" class="col-sm-2 col-form-label">Analyze</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="analyze" aria-describedby="analyze" placeholder="20">
                                    </div>                                
                            </div>
                            <div class="form-group row">
                                    <label for="understand" class="col-sm-2 col-form-label">Understand</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="understand" aria-describedby="understand" placeholder="10">
                                    </div>
                                    <label for="evaluate" class="col-sm-2 col-form-label">Evaluate</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="evaluate" aria-describedby="evaluate" placeholder="15">
                                    </div>                                
                            </div>
                            <div class="form-group row">
                                    <label for="apply" class="col-sm-2 col-form-label">Apply</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="apply" aria-describedby="apply" placeholder="10">
                                    </div>
                                    <label for="create" class="col-sm-2 col-form-label">Create</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="create" aria-describedby="create" placeholder="15">
                                    </div>                                
                            </div>
                            <h5>Number of Components</h5>
                            <hr>
                            <div class="form-group row">
                                    <label for="chapter" class="col-sm-2 col-form-label">Chapter</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="chapter" aria-describedby="chapter" placeholder="12">
                                    </div>
                                    <label for="video" class="col-sm-2 col-form-label">Video</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="video" aria-describedby="video" placeholder="115">
                                    </div>                                
                            </div>
                            <div class="form-group row">
                                    <label for="html" class="col-sm-2 col-form-label">HTML</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="html" aria-describedby="html" placeholder="50">
                                    </div>
                                    <label for="discussion" class="col-sm-2 col-form-label">Discussion</label>                                     
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="discussion" aria-describedby="discussion" placeholder="5">
                                    </div>                                
                            </div>
                            <div class="form-group row">
                                    <label for="problem" class="col-sm-2 col-form-label">Problem</label>                                    
                                    <div class="col-sm-4">
                                        <input type="number" step=any class="form-control" id="problem" aria-describedby="problem" placeholder="10">
                                    </div>
                                                                
                            </div>
                            <h5>Sequence Components</h5>
                            <hr>
                            <div class="form-group row">
                                    <label for="transition" class="col-sm-2 col-form-label">Transition</label>                                    
                                    <div class="col-sm-10">
                                        <textarea class="form-control" id="transition" aria-describedby="transition" placeholder="[Chapter, Video, Video, HTML, Problem, ...]"></textarea>
                                    </div>
                                                                
                            </div>



                            
                            <button type="submit" class="btn btn-primary">Analyze</button>
                        </form>
                    </div>
                </div>
            </div>


            <%- include('includes/end.ejs') %>